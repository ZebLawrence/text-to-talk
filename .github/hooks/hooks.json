{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "./scripts/hooks/hook-handler.sh",
        "powershell": "powershell -ExecutionPolicy Bypass -File ./scripts/hooks/hook-handler.ps1",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "./scripts/hooks/hook-handler.sh",
        "powershell": "powershell -ExecutionPolicy Bypass -File ./scripts/hooks/hook-handler.ps1",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "userPromptSubmitted": [
      {
        "type": "command",
        "bash": "./scripts/hooks/hook-handler.sh",
        "powershell": "powershell -ExecutionPolicy Bypass -File ./scripts/hooks/hook-handler.ps1",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": "./scripts/hooks/hook-handler.sh",
        "powershell": "powershell -ExecutionPolicy Bypass -File ./scripts/hooks/hook-handler.ps1",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": "./scripts/hooks/hook-handler.sh",
        "powershell": "powershell -ExecutionPolicy Bypass -File ./scripts/hooks/hook-handler.ps1",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "errorOccurred": [
      {
        "type": "command",
        "bash": "./scripts/hooks/hook-handler.sh",
        "powershell": "powershell -ExecutionPolicy Bypass -File ./scripts/hooks/hook-handler.ps1",
        "cwd": ".",
        "timeoutSec": 10
      }
    ]
  }
}
